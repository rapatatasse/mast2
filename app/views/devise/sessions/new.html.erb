<div class="py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="text-center mb-4">
        <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex p-4 mb-3">
          <i class="bi bi-box-arrow-in-right fs-1 text-primary"></i>
        </div>
        <h2 class="fw-bold">Connexion</h2>
        <p class="text-muted">Connectez-vous Ã  votre compte MAST2</p>
      </div>

      <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          label: "Email",
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control-lg" },
                          wrapper_html: { class: "mb-3" } %>
              <%= f.input :password,
                          label: "Mot de passe",
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-control-lg" },
                          wrapper_html: { class: "mb-3" } %>
              <%= f.input :remember_me, 
                          label: "Se souvenir de moi",
                          as: :boolean,
                          wrapper_html: { class: "mb-3" } if devise_mapping.rememberable? %>
            </div>

            <div class="d-grid gap-2">
              <%= f.button :submit, "Se connecter", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
