<div class="py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="fw-bold mb-1">
        <i class="bi bi-person-gear text-success"></i> Gestion des Utilisateurs
      </h1>
      <p class="text-muted mb-0">Liste complète des utilisateurs (<%= @users.count %> utilisateurs)</p>
    </div>
  </div>

  <!-- Users Grid -->
  <div class="row g-4">
    <% @users.each do |user| %>
      <div class="col-md-6 col-lg-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <div class="rounded-circle bg-success bg-opacity-10 d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                <i class="bi bi-person-circle fs-2 text-success"></i>
              </div>
              <div class="flex-grow-1">
                <h5 class="mb-1 fw-bold">
                  <%= user.nom.present? ? "#{user.nom} #{user.prenom}" : "Utilisateur ##{user.id}" %>
                </h5>
                <p class="text-muted mb-0 small">
                  <i class="bi bi-envelope me-1"></i>
                  <%= user.email %>
                </p>
              </div>
            </div>

            <hr>

            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="text-muted small">
                  <i class="bi bi-people me-1"></i> Clients
                </span>
                <span class="badge bg-primary"><%= user.clients.count %></span>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <span class="text-muted small">
                  <i class="bi bi-calendar-plus me-1"></i> Inscrit le
                </span>
                <span class="small"><%= user.created_at.strftime("%d/%m/%Y") %></span>
              </div>
            </div>

            <div class="d-flex gap-2 mt-3">
              <%= link_to user_path(user), class: "btn btn-sm btn-outline-primary flex-fill" do %>
                <i class="bi bi-eye me-1"></i> Voir
              <% end %>
              <%= link_to edit_user_path(user), class: "btn btn-sm btn-outline-warning flex-fill" do %>
                <i class="bi bi-pencil me-1"></i> Modifier
              <% end %>
              <% if user != current_user %>
                <%= button_to user_path(user), 
                              method: :delete, 
                              class: "btn btn-sm btn-outline-danger flex-fill",
                              data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet utilisateur ?" } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @users.empty? %>
    <div class="card border-0 shadow-sm">
      <div class="card-body text-center py-5">
        <i class="bi bi-inbox fs-1 text-muted"></i>
        <p class="text-muted mt-3">Aucun utilisateur trouvé</p>
      </div>
    </div>
  <% end %>
</div>
