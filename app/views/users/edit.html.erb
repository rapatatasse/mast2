<div class="py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="fw-bold mb-1">
        <i class="bi bi-pencil-square text-warning"></i> Modifier l'Utilisateur
      </h1>
      <p class="text-muted mb-0">Modifier les informations de l'utilisateur #<%= @user.id %></p>
    </div>
    <div class="d-flex gap-2">
      <%= link_to @user, class: "btn btn-outline-info" do %>
        <i class="bi bi-eye me-1"></i> Voir
      <% end %>
      <%= link_to users_path, class: "btn btn-outline-secondary" do %>
        <i class="bi bi-arrow-left me-1"></i> Retour
      <% end %>
    </div>
  </div>

  <div class="card border-0 shadow-sm">
    <div class="card-body p-4">
      <%= simple_form_for(@user) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="row g-3">
          <div class="col-12">
            <%= f.input :email, 
                        label: "Email",
                        input_html: { class: "form-control-lg" },
                        wrapper_html: { class: "mb-3" } %>
          </div>

          <div class="col-md-6">
            <%= f.input :nom, 
                        label: "Nom",
                        input_html: { class: "form-control-lg" },
                        wrapper_html: { class: "mb-3" } %>
          </div>
          
          <div class="col-md-6">
            <%= f.input :prenom, 
                        label: "Prénom",
                        input_html: { class: "form-control-lg" },
                        wrapper_html: { class: "mb-3" } %>
          </div>
        </div>

        <div class="d-flex gap-2 justify-content-end mt-4">
          <%= link_to "Annuler", @user, class: "btn btn-outline-secondary" %>
          <%= f.button :submit, "Mettre à jour", class: "btn btn-primary px-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
